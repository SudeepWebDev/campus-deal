    <meta name="description"
        content="Campus Deal is an online marketplace for college students to buy and sell goods and services. Find great deals on textbooks, electronics, and dorm room essentials.">
    <style>
        .cart-popup {
            padding: 0px;
            margin: 10px;
            width: fit-content;
            height: 400px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .cart-popup:hover {
            transform: translateY(0px);
        }

        .cart-popup h3.cart-title {
            box-shadow: 1px 1px 2px #bbbbbb;
            background: linear-gradient(to bottom, orange, #ff8c00);
            z-index: 995;
            text-align: center;
        }

        .cart-icon {
            cursor: pointer;
        }

        .cart-title {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-align: center;
        }

        .cart-items {
            list-style-type: none;
            margin: 10px;
            padding: 10px;
            list-style: none;
            padding: 0;
        }

        .cart-item-img {
            width: 80px;
            height: auto;
            margin-right: 10px;
            border-radius: 5px;
            list-style: none;
            padding: 0;
        }

        .cart-items li {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 10px;
            padding-bottom: 5px;
            border-bottom: 1px solid #ddd;
        }

        /* Style for cart item price */
        .cart-item p {
            font-size: 20px;
            font-weight: bold;
        }

        /* Style for cart buttons container */
        .cart-btn-cont {
            display: flex;
            align-items: center;
            border-radius: 50%;
        }

        /* Style for cart item button */
        .cart-item-btn {
            width: 30px;
            height: 30px;
            font-size: 20px;
            font-weight: bold;
            border: none;
            border-radius: 50%;
            background-color: #ccc;
            /* color: #fff; */
            cursor: pointer;
            margin: 0 10px;
        }

        /* Style for cart item count */
        .item-counts {
            font-size: 20px;
            font-weight: bold;
            margin: 0 10px;
        }

        /* Style for check out button */
        .check_out {
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            margin-right: 10px;
            cursor: pointer;
        }

        /* Style for remove button */
        .remove_item {
            background-color: #f44336;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
        }

        .total_cart_price p,
        .total_cart_price button {
            padding: 10px;
            text-align: center;
            display: flex;
            justify-content: space-around;
            /* background-color: #ff8c00ae; */
        }

        .total_cart_price {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f2f2f2;
            padding: 20px;
            margin-top: 20px;
        }

        .total_cart_price p {
            font-size: 20px;
            font-weight: bold;
            margin: 0;
        }

        .check_out {
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
            cursor: pointer;
        }

        .empty_cart {
            color: white;
            font-size: 25px;
            margin: 10px auto;
            display: block;
        }
    </style>
    <script src="https://kit.fontawesome.com/80908bc01a.js" crossorigin="anonymous"></script>
