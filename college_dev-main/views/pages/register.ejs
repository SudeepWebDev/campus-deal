    <main>
        <section id="register-container-parent">
            <div class="register-container">
                <div class="register-form-container">
                    <h2>Registration Form</h2>

                    <hr color="white">
                    <form id="register-form" method="post">
                        <div class="name-cont-cont">
                            <div class="name-cont">
                                <label for="first-name">First Name:</label>
                                <input type="text" name="fname" id="first-name" placeholder="Enter Your First Name">
                            </div>
                            <div class="name-cont">
                                <label for="last-name">Last Name:</label>
                                <input type="text" name="lname" id="last-name" placeholder="Enter Your Last Name">
                            </div>
                        </div>
                        <div class="gender-cont">
                            <label for="gender">Gender:</label>
                            Male<input type="radio" name="mygender" id="male">
                            Female<input type="radio" name="mygender" id="female">
                            Other<input type="radio" name="mygender" id="other">
                        </div>
                        <div class="age-cont">
                            <label for="age">Age:</label>
                            <input type="number" name="age" id="age" placeholder="Enter Your Age">
                        </div>
                        <div class="email-cont">
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" placeholder="Enter a Valid Email">
                        </div>
                        <div class="pwd-cont-cont">
                            <div class="pwd-cont">
                                <label for="password">Create Password:</label>
                                <input type="password" name="pass" id="password" placeholder="Create a Password">
                            </div>
                            <div class="pwd-cont">
                                <label for="confirm-password">Confirm Password:</label>
                                <input type="password" name="cpass" id="confirm-password"
                                    placeholder="Re-enter the Password">
                            </div>
                        </div>
                        <div class="college-name-cont">
                            <label for="college-name">College Name:</label>
                            <input type="text" name="clg" id="college-name" placeholder="Enter Your College Name">
                        </div>
                        <div class="college-roll-course-cont">
                            <div class="college-roll-cont">
                                <label for="college-roll-no">College Roll No.:</label>
                                <input type="number" name="roll" id="college-roll-no"
                                    placeholder="Enter Your Valid College Roll Number">
                            </div>
                            <div class="college-course-cont">
                                <label for="course">Course:</label>
                                <input type="text" name="Course" id="course" placeholder="Enter Your Present Course">
                            </div>
                        </div>
                        <div class="year-cont">
                            <label for="year">Year:</label>
                            First<input type="radio" name="sem" id="first">
                            Second<input type="radio" name="sem" id="second">
                            Third<input type="radio" name="sem" id="third">
                        </div>
                        <!-- <div class="profile-pic-cont">
                            <label for="profile-pic" style="margin: 5px;">Profile Pic:</label>
                            <i class="fa fa-user" aria-hidden="true" style="margin: 5px;"></i>
                            <input type="file" name="File" id="profile-pic" style="margin: 5px;">
                        </div> -->
                        <input type="submit" name="Submit" class="submit">
                    </form>
                    <div class="sign-dwn-btns">
                        <button class="show-sign-in-btn"><a href="/login" style="color: inherit;">Already Sign up - Sign
                                In</a> </button>
                    </div>
                </div>
            </div>

        </section>

    </main>


