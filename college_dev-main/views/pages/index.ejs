    <section class="slideshow-container card">
        <div class="mySlides">
            <img src="./images/slide/1.png" alt="Slide 1">
            <div class="caption">Campus Deal</div>
        </div>

        <div class="mySlides">
            <img src="./images/slide/2.png" alt="Slide 2">
